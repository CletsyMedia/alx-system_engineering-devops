#!/usr/bin/env bash
# Update the hosts file
sudo sed -i 's/^127.0.0.1.*$/& 127.0.0.2/' /etc/hosts

# Add an entry for facebook.com
echo '8.8.8.8 facebook.com' | sudo tee -a /etc/hosts > /dev/null

# Display the initial state
echo "Before running the script:"
ping localhost

# Sleep for a short time to allow DNS cache to update
sleep 2

# Display the updated state
echo -e "\nAfter running the script:"
ping localhost
ping facebook.com
