#!/usr/bin/env bash
# This script creates an RSA key pair with the private key named 'school' and protected by the passphrase 'betty'

# Check if the key pair already exists
if [ -f ~/.ssh/school ] || [ -f ~/.ssh/school.pub ]; then
    echo "Key pair 'school' already exists."
else
    # Create the key pair with a passphrase
    ssh-keygen -t rsa -b 4096 -C "Generated by 1-create_ssh_key_pair" -f ~/.ssh/school -N "betty"
    echo "Key pair 'school' created successfully."
fi
